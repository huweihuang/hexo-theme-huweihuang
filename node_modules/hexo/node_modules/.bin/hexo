#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../../../_hexo-cli@1.0.3@hexo-cli/bin/hexo" "$@"
  ret=$?
else 
  node  "$basedir/../../../_hexo-cli@1.0.3@hexo-cli/bin/hexo" "$@"
  ret=$?
fi
exit $ret
